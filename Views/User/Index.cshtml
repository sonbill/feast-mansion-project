@model UserViewModel;

@{
    ViewData["Title"] = "User Page";
    Layout = "_Layout";
}

<div class="flex my-10 items-center px-3">
    <h1 class="font-bold text-2xl">Quản lý người dùng</h1>
</div>
<div class="relative shadow-md sm:rounded-lg px-3">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400 h-full">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th class="px-6 py-3">
                    ID
                </th>
                <th class="px-6 py-3">
                    Email
                </th>
                <th class="px-6 py-3">
                    Tên đầy đủ
                </th>
                <th class="px-6 py-3">

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Users)
            {
                <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        @obj.UserId
                    </th>
                    <td class="px-6 py-4">
                        @obj.Email
                    </td>
                    <td class="px-2 py-4">
                        @obj.Customer.FullName
                    </td>
                    <td class="px-6 py-4 space-x-3">
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@obj.UserId" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Chi tiết</a>
                    </td>                    
                </tr>
            }
        </tbody>
    </table>
    @*@await Html.PartialAsync("_Pager", Model.Pager)*@
    <div class="fixed bottom-14 max-w-screen-xl p-2 text-right">
        @*@Html.Partial("_PagerCategory", Model)*@
    </div>
</div>

