@model Category

@{
    ViewData["Title"] = "Edit Category Page";
    Layout = "_Layout";
}

<div>
    <h1>Edit</h1>
    <div class="p-10">
        <form asp-controller="Category" asp-action="EditCategory" asp-route-id="@Model.Id" method="post" class="max-w-[500px] mx-auto">
            <input type="hidden" asp-for="Id" />
            <div class="mb-6">
                <label asp-for="Name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Name</label>
                <input asp-for="Name" type="text" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="Name category" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-6">
                <label asp-for="Description" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Description</label>
                <textarea asp-for="Description" id="Description" rows="4" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500" placeholder="Description..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="space-x-5">
                <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Update</button>
                <button type="submit" asp-controller="Category" asp-action="Delete" asp-route-id="@Model.Id">Delete</button>
                <a asp-controller="Category" asp-action="Index" class="hover:text-blue-500">Back</a>
            </div>
        </form>
    </div>
</div>
