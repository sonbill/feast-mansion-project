@model OrderHistoryViewModel
@{
    ViewData["Title"] = "Order Page";
    Layout = "_ProfileLayout";
}
<div class="relative overflow-x-auto shadow-md sm:rounded-lg p-4 rounded-lg bg-gray-50" id="history" role="tabpanel" aria-labelledby="history-tab">
    <h1 class="font-bold text-xl mb-5">LỊCH SỬ GIAO HÀNG</h1>
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Mã đơn hàng
                </th>
                <th scope="col" class="px-6 py-3">
                    Tình trạng
                </th>
                <th scope="col" class="px-6 py-3">
                    Tổng tiền
                </th>
                <th scope="col" class="px-6 py-3">
                    Ngày đặt
                </th>
                <th scope="col" class="px-6 py-3">
                    <span class="sr-only">Detail</span>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Orders.Count() != 0)
            {
                @foreach (var order in Model.Orders)
                {
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">

                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            @order.OrderId
                        </th>
                        <td class="px-6 py-4">
                            @order.Status
                        </td>
                        <td class="px-6 py-4">
                            @string.Format("{0:N0} VNĐ", @order.TotalPrice)
                        </td>
                        <td class="px-6 py-4">
                            @order.OrderDate
                        </td>
                        <td class="px-6 py-4 text-right">
                            <a asp-action="OrdersHistory" asp-controller="Home" asp-route-orderId="@order.OrderId" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Chi tiết</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="max-w-screen-xl mt-5 p-2">
        @Html.Partial("_PagerOrderHistory", Model)
    </div>
</div>