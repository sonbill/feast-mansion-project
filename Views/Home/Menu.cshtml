@model HomeViewModel

    @{
        ViewData["Title"] = "Home Page";

        Layout = "_HomeLayout";
    }

    <div class="my-5 rounded bg-red-700 p-3">
        <h1 class="text-xl font-bold mb-2 text-white">THỰC ĐƠN</h1>
        <div class="w-full h-[250px]">
            <img class="w-full h-full object-cover" src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80"/>
        </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-3">
        <div class="col-span-1 px-2 md:px-0">
            <div class="flex flex-col">
                @foreach (var category in Model.Categories)
                {
                    <a href="@Url.Action("Menu", new { categoryId = category.Id })" class="@(Model.SelectedCategoryId == category.Id ? "inline-flex items-center gap-x-2 py-3 px-4 text-sm font-medium bg-red-700 text-white border border-slate-400 text-gray-800 -mt-px first:rounded-t-lg first:mt-0 last:rounded-b-lg" : "inline-flex items-center gap-x-2 py-3 px-4 text-sm font-medium bg-white border text-gray-800 -mt-px first:rounded-t-lg first:mt-0 last:rounded-b-lg")">
                        @category.Name
                    </a>

                }
            </div>
        </div>
        <div class="col-span-1 md:col-span-3">
            @if (Model.Products.Count == 0)
            {
                <div class="flex h-full w-full items-center">
                    <p class="w-full text-center text-gray-500 text-xl">Không có món ăn.</p>
                </div>
            }
            else
            {
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">

                @foreach (var product in Model.Products)
                {
                    <div class="col-span-1 px-2 md:px-0">
                        <div class="border rounded border-gray-600 p-3">
                            <div class="w-full sm:max-w-[303px] h-full sm:h-[304px] md:h-[304px] mb-3 mx-auto">
                                <img class="w-full h-full object-cover " src="@Url.Content($"~/Uploads/{product.ImagePath}")" alt="@product.Name">
                            </div>
                            <div class="space-y-3">
                                <p class="text-lg font-bold">@product.Name</p>
                                <p class="">@string.Format("{0:N0} VNĐ", @product.Price)</p>
                                <div class="flex justify-between">

                                    <a href="@Url.Action("Details", new { id = product.ProductId })" class="w-[100px] text-gray-900 hover:text-white border border-gray-900 hover:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm px-2 py-1.5 text-center">View</a>

                                    <form asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">
                                        <button type="submit" class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-2 py-1.5 text-center inline-flex items-center mr-2">
                                            <svg aria-hidden="true" class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"></path></svg>
                                            Thêm vào giỏ hàng
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                 }
                </div>
            }
        </div>
    </div>


