@model OrderViewModel

@{
    ViewData["Title"] = "Order Page";
    Layout = "_Layout";
}

<div class="flex my-10 items-center justify-center px-3">
    <h1 class="font-bold text-2xl">QUẢN LÝ ĐƠN HÀNG</h1>
</div>
<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <h1>Search Orders by ID</h1>
    @*<form asp-controller="Order" asp-action="SearchOrders" method="get">
        <div class="flex items-center">
            <label for="searchQuery" class="mr-2">Search:</label>
            <input type="text" id="searchQuery" name="searchQuery" class="border rounded px-2 py-1" />
            <button type="submit" class="ml-2 px-4 py-1 bg-blue-500 text-white rounded">Search</button>
        </div>
    </form>*@
    <table class="w-full text-sm text-left text-gray-500">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
            <tr>
                <th class="px-6 py-3">
                    Order ID
                </th>
                <th class="px-6 py-3">
                    Customer
                </th>
                <th class="px-6 py-3">
                    Note
                </th>
                <th class="px-6 py-3">
                    Order Date
                </th>
                <th class="px-6 py-3"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Orders)
            {
                <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        @obj.OrderId
                    </th>
                    <td class="px-6 py-4">
                        @obj.Customer.FullName
                    </td>
                    <td class="px-6 py-4">
                        @obj.Note
                    </td>
                    <td class="px-6 py-4">
                        @obj.OrderDate
                    </td>
                    <td class="px-6 py-4 space-x-3">
                        <a asp-controller="Order" asp-action="Edit" asp-route-id="@obj.OrderId" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="flex justify-end mt-4">
        <nav class="z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
            <a href="@Url.Action("Search", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize })" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                <span class="sr-only">Previous</span>
             Previous arrow icon 
            </a>
            <a href="@Url.Action("Search", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize })" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                <span class="sr-only">Next</span>
             Next arrow icon 
            </a>
        </nav>
    </div>
</div>
