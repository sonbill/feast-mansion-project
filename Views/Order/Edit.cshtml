@model Order

@{
    ViewData["Title"] = "Order Page";
    Layout = "_Layout";

    string bgColor;
    switch (@Model.Status)
    {
        case "Shipping":
            bgColor = "#2563eb";
            break;
        case "Pending":
            bgColor = "#a1a1aa";
            break;
        case "Complete":
            bgColor = "#16a34a";
            break;
        case "Cooking":
            bgColor = "#ff9500";
            break;
        case "Cancel":
            bgColor = "#dc2626";
            break;
        default:
            bgColor = "#ca8a04";
            break;
    }
}

<div class="mx-auto py-6 px-3 sm:px-6 lg:px-8">
    <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg">
        <div class="p-6 bg-white border-b border-gray-200">
            <h2 class="text-2xl font-bold mb-4">Chi tiết đơn hàng</h2>
            <div class="flex mb-2 items-center space-x-2">
                <p class="text-sm font-medium">Mã đơn hàng:</p>
                <p class="text-sm font-medium rounded-lg p-1 text-white bg-gray-500">#@Model.OrderId</p>
            </div>
            <div class="flex mb-4 items-center space-x-2">
                <p class="text-sm font-medium">Khách hàng:</p>
                <a asp-controller="User" asp-action="Edit" asp-route-id="@Model.Customer.CustomerId" class="text-sm hover:underline font-medium">@Model.Customer.FullName</a>
            </div>

            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Món ăn</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hình ảnh</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Giá món ăn</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Số lượng</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tổng giá đơn hàng</th>
                    </tr>
                </thead>
