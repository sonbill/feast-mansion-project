@model feast_mansion_project.Models.DTO.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_Authenticate";
}

<section class="bg-gray-50 dark:bg-gray-900">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-0">
        <a href="/" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
            <img class="w-8 h-8 mr-2" src="/assets/logo/feast-mansion-logo.png" alt="logo">
            Feast Mansion
        </a>
        <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
            <div class="p-6 space-y-3 md:space-y-2 sm:p-8">
                <form asp-controller="UserAuthentication" asp-action="Register" method="post" class="">
                    <div>
                        <label asp-for="FullName" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Họ tên đầy đủ</label>
                        <input asp-for="FullName" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-red-600 focus:border-red-600 block w-full p-2" placeholder="Họ tên đầy đủ" required>
                        <span asp-validation-for="FullName" class="items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1"></span>
                    </div>

                    <div>
                        <label asp-for="Email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>
                        <input asp-for="Email" type="email" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2" placeholder="email@gmail.com" required>
                        <span asp-validation-for="Email" class="items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1"></span>
                    </div>

                    <div>
                        <label asp-for="Address" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Địa chỉ</label>
                        <input asp-for="Address" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-red-600 focus:border-red-600 block w-full p-2" placeholder="Địa chỉ" required>
                        <span asp-validation-for="Address" class="items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1"></span>
                    </div>

                    <div>
                        <label asp-for="Address" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Thành phố</label>
                        <input asp-for="Address" type="text" value="Tp. Hồ Chí Minh" readonly
                               class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-red-600 focus:border-red-600 block w-full p-2" />
                        <span asp-validation-for="Address" class="items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1"></span>
                    </div>

                    <div>
                        <label asp-for="Phone" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Số điện thoại</label>
                        <input asp-for="Phone" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-red-600 focus:border-red-600 block w-full p-2" placeholder="012-345-678" required>
                        <span asp-validation-for="Phone" class="items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1"></span>
                    </div>

                    <div>
                        <label asp-for="Password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Mật khẩu</label>
                        <input asp-for="Password" type="password" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-red-600 focus:border-red-600 block w-full p-2" required>
                        <span asp-validation-for="Password" class="items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1"></span>
                    </div>

                    <div>
                        <label asp-for="PasswordConfirm" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Xác nhận mật khẩu</label>
                        <input asp-for="PasswordConfirm" type="password" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-red-600 focus:border-red-600 block w-full p-2" required>
                        <span asp-validation-for="PasswordConfirm" class="items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1"></span>
                    </div>

                    <div class="flex items-start">
                        <div class="flex items-center h-5">
                            <input id="terms" aria-describedby="terms" type="checkbox" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-red-300" required>
                        </div>
                        <div class="ml-3 text-sm">
                            <label for="terms" class="font-light text-gray-500 dark:text-gray-300">Tôi đồng ý với các <a class="font-medium text-red-600 hover:underline" asp-controller="Home" asp-action="Policy">Chính sách của cửa hàng</a></label>
                        </div>
                    </div>

                    <button type="submit" class="w-full text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Đăng ký</button>

                    <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                        Bạn đã có tài khoản? <a asp-controller="UserAuthentication" asp-action="Login" class="font-medium text-red-600 hover:underline">Đăng nhập ở đây</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>